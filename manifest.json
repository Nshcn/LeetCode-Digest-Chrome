
{
	"manifest_version": 2,
	"name": "LeetCode Digest",
	"version": "0.1",

	"description": "一键生成LeetCode的学习笔记，并保存成markdown。",
	"icons": {
		"16": "img/16x16.png",	
		"32": "img/32x32.png",	
		"48": "img/48x48.png",	
		"128": "img/128x128.png"	
	},

	"browser_action": {
		"default_icon": "img/128x128.png",	
		"default_title": "一键生成LeetCode笔记",
		"default_popup": "main.html"
	},
	"content_scripts": [ {
		"js": [ "inject.js" ],
		"matches": ["http://*/*", "https://*/*"]
     } ],
     "permissions": [
        "activeTab",
        "tabs", "<all_urls>",
        "storage"
    ]
}
